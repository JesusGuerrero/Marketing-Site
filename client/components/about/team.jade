.parallax-team.parallaxBg( style="background-position: 50% 30px;")
    .container.text-center( style="padding:50px 0;")
        .col-xs-12
            .headline.text-center.withH2
                h1
                    | OUR TEAM
            .team-profiles
                each profile, i in site.team
                    .profile(data-toggle="modal" href="#profileModal#{i}")
                        .profile-wrapper.img-rounded
                            img.img-responsive(src="#{profile.img}")
                            .caption
                                .caption-text
                                    .text-row-name #{profile.name}
                                    .text-row-role #{profile.role}
            br
            br
            .headline.text-center.withH2
                h2
                    | Want to Join Us?
                h3
                    |Find out
