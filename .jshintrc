{
  "node": true,
  "browser": true,
  "esnext": true,
  "bitwise": true,
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "quotmark": "single",
  "regexp": true,
  "undef": false,
  "unused": false,
  "strict": true,
  "trailing": true,
  "smarttabs": true,
  "globals": {
    /* ANGULAR */
    "angular"     : false,
    "inject"      : false,
    "$"           : false,
    "alert"       : true,
    
    /* TESTS */
    "describe"    : true,
    "it"          : true,
    "before"      : true,
    "after"       : true,
    "expect"      : true,
    "beforeEach"  : true,
    "afterEach"   : true,
    "by"          : true,
    "browser"     : true,
    "element"     : true
  },

  "maxparams": 10,
  "maxdepth": 4,
  "maxstatements": 20,
  "maxlen": 200,
  "maxcomplexity": 7
}
